<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
       
<tiles-definitions>

	<definition name="baseLayout" template="/WEB-INF/views/layout-tiles.jsp">
		<put-attribute name="header" value="/WEB-INF/views/header.jsp" />
		<put-attribute name="nav" value="/WEB-INF/views/nav.jsp" />
		<put-attribute name="content" value="/WEB-INF/views/content.jsp" />
		<put-attribute name="footer" value="/WEB-INF/views/footer.jsp" />
	</definition>
	
	<!-- 로그인 -->
	<definition name="login" extends="baseLayout">
		<put-attribute name="content" value="/WEB-INF/views/login/login.jsp" />
	</definition>
	
	<!-- 아이디 찾기 -->
	<definition name="idSearch" extends="baseLayout">
		<put-attribute name="content" value="/WEB-INF/views/login/idSearch.jsp" />
	</definition>
	
	<!-- 비밀번호 찾기 -->
	<definition name="pwdSearch" extends="baseLayout">
		<put-attribute name="content" value="/WEB-INF/views/login/pwdSearch.jsp"></put-attribute>
	</definition>
	
	<!-- 회원가입 -->
	<definition name="regi" extends="baseLayout">
		<put-attribute name="content" value="/WEB-INF/views/login/regi.jsp" />
	</definition>
	
	<!-- 아이디 찾기 후 -->
	<definition name="idCorrect" extends="baseLayout">
		<put-attribute name="content" value="/WEB-INF/views/login/idCorrect.jsp" />
	</definition>
	
	<!-- 회원가입부터 로그인 메세지 -->
	<definition name="logMsg" extends="baseLayout">
		<put-attribute name="content" value="/WEB-INF/views/login/logMsg.jsp" />
	</definition>

</tiles-definitions>